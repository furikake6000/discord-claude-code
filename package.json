{
  "name": "discord-claude-code",
  "version": "1.0.0",
  "description": "Discord bot that wraps Claude Code functionality",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "ts-node src/bot.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "pm2:start": "pm2 start npm --name 'discord-bot-dev' -- run dev",
    "pm2:stop": "pm2 stop discord-bot-dev || true",
    "pm2:restart": "pm2 restart discord-bot-dev || true",
    "pm2:delete": "pm2 delete discord-bot-dev || true"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.31",
    "discord.js": "^14.14.1",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "pm2": "^6.0.8",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "discord",
    "bot",
    "claude",
    "development",
    "ai"
  ],
  "author": "",
  "license": "MIT"
}
